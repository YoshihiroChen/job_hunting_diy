    <script>
      function saveScrollPosition() {
        const y = window.scrollY;
        localStorage.setItem("scrollPos", y);
        console.log("✅ 保存滚动位置:", y);
      }
    
      function tryRestoreScroll() {
        const pos = localStorage.getItem("scrollPos");
        console.log("🌀 检查滚动恢复:", pos);
    
        if (pos !== null && !window.location.pathname.startsWith("/wiki")) {
          window.scrollTo(0, parseInt(pos));
          console.log("✅ 滚动到:", pos);
          localStorage.removeItem("scrollPos");
          return true;
        }
        return false;
      }
    
      function startScrollRecoveryWatcher() {
        let attempt = 0;
        const interval = setInterval(() => {
          if (tryRestoreScroll() || attempt > 10) {
            clearInterval(interval);
          }
          attempt++;
        }, 100);
      }
    
      window.addEventListener("load", startScrollRecoveryWatcher);
      window.addEventListener("pageshow", startScrollRecoveryWatcher);
    
      // ✅ 点击“返回上一页”时，强制刷新页面（解决浏览器缓存问题）
      function forceBackWithReload(event) {
        event.preventDefault();
        const target = event.currentTarget.getAttribute("href");
        window.location.href = target; // 真正加载页面，触发 JS
      }
    </script>
  




  </body>
</html>